<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="10dp"
    android:paddingStart="15dp"
    android:paddingLeft="15dp"
    android:paddingBottom="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_grey"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/employee_name_text"
        android:text="@string/name"
        style="@style/employee_text_item"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/employee_age_text"
        android:text="@string/age"
        style="@style/employee_text_item"
        app:layout_constraintTop_toBottomOf="@id/employee_name_text"
        app:layout_constraintStart_toStartOf="@id/employee_name_text"/>

    <TextView
        android:id="@+id/employee_phone_text"
        android:text="@string/phone"
        style="@style/employee_text_item"
        app:layout_constraintTop_toBottomOf="@id/employee_age_text"
        app:layout_constraintStart_toStartOf="@id/employee_age_text"/>

    <TextView
        android:id="@+id/employee_gender_text"
        android:text="@string/gender"
        style="@style/employee_text_item"
        app:layout_constraintTop_toBottomOf="@id/employee_phone_text"
        app:layout_constraintStart_toStartOf="@id/employee_phone_text"/>

</androidx.constraintlayout.widget.ConstraintLayout>